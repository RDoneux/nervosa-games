{
  "name": "nervosa-games",
  "version": "0.5.3",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build && cd functions && npm run build",
    "watch": "ng build --watch --configuration development",
    "test:commit": "npm run test:production && npm run build",
    "test:development": "ng test --karma-config karma-development.conf.js",
    "test:production": "ng test --karma-config karma-production.conf.js",
    "deploy": "firebase deploy --only functions,hosting"
  },
